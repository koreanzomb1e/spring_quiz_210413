<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quiz.lesson06.dao.BookmarkDAO">
 	<insert id="insertBookmark" parameterType="map">
 		INSERT INTO `bookmark`
 		(
 			`name`
 			, `url`
 		)
 		VALUES
 		(
 			#{name}
 			, #{url}
 		)
 	</insert>
 	
 	<select id="selectBookmark" resultType="com.quiz.lesson06.model.Bookmark">
 		SELECT
 			`id`
 			, `name`
	 		, `url`
	 	FROM
	 		`bookmark`
 	</select>
 	
 	<select id="existBookmarkByUrl" parameterType="string" resultType="boolean">
 		SELECT
 			count(1)
 		FROM
 			`bookmark`
 		WHERE
 			`url` = #{url}
 	</select>
 	
 	<delete id="deleteBookmarkById" parameterType="int">
 		DELETE
 		FROM
 			`bookmark`
 		WHERE
 			`id` = #{id}
 	</delete>
 
 </mapper>